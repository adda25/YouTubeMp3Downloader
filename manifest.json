{
  "manifest_version" : 2,
  "name" : "YouTubeDownloader",
  "version" : "0.1",
  "browser_action" : {
    "default_icon" : "icon.png"
  },
   "permissions": [ "tabs", "downloads" ],
  "background": {
    "matches": [
      "https://www.youtube.com/watch?*"
    ],
    "scripts": ["background.js"]
  }
 }